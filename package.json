{
  "name": "mcp-epub",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.7.0",
  "description": "mcp about load content from epub file",
  "author": "hhk-png <fangluoabc@163.com>",
  "license": "MIT",
  "homepage": "https://github.com/hhk-png/mcp-epub",
  "bugs": "https://github.com/hhk-png/mcp-epub/issues",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "mcp-epub": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:sse": "node dist/sse.js",
    "inspect": "pnpm exec mcp-inspector start",
    "lint": "eslint . --cache --fix",
    "prepare": "simple-git-hooks",
    "release": "bumpp",
    "publish:ci": "pnpm -r publish --access public --no-git-checks"
  },
  "dependencies": {
    "@lingo-reader/epub-parser": "^0.2.3",
    "@modelcontextprotocol/sdk": "1.7.0",
    "express": "^4.21.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@modelcontextprotocol/inspector": "^0.7.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.14",
    "bumpp": "^10.1.0",
    "lint-staged": "^15.5.0",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix --cache"
  }
}
